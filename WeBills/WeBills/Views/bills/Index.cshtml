@model IEnumerable<WeBills.Models.bills>

@{
    ViewBag.Title = "Index";
}

<h2 class="mt-4">Bills</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.homeid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.waterCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.electricCost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.homeid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.waterCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.electricCost)
        </td>
        <td>
            <a class="btn btn-danger" href=""><i class="fa fa-backward"></i> Back</a>
            @*@Html.ActionLink("Back", "Edit", new { id=item.billid })*@ |
            @*@Html.ActionLink("Pay", "Details", new { id=item.billid })*@
            <a class="btn btn-success" href=""><i class="fa fa-paypal"></i> Pay</a>
        </td>
    </tr>
}

</table>
